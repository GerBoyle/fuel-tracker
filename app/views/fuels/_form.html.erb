<%= form_for @fuel do |f| %>

    <p>
        <%= f.label :num_litres %><br/>
        <%= f.text_field :num_litres %>
    </p>
    <p>
        <%= f.label :price_litre %><br/>
        <%= f.text_area :price_litre %>
    </p>
    <p>
        <%= f.label :total_cost %><br/>
        <%= f.text_area :total_cost %>
    </p>
    <p> 
        <%= f.label :date %><br/>
        <%= f.text_area :date %>
    </p>
    <p> 
        <%= f.submit %>
    </p>
<% end %>

<%= link_to "Back to fuel log", fuels_path %>